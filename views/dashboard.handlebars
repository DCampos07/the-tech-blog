{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  {{#each posts as |post|}}
  {{>post-info post}}
  {{/each}}

</section>
{{/if}}

<div class="fixed-bottom centered">
  <a class="btn btn-secondary btn-lg" href="/dashboard/create-post" role="button">+ New Post</a>
</div>

<script src="/js/add-post.js"></script>